<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="paddy.mchugh.com.expandablelist2.activity_teach_mici_mac_gabhann">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imgVteach_mici_mac_gabhann"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/teach_mici_mac_gabhann"
                android:adjustViewBounds="true"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:text="@string/teach_mici_mac_gabhann_heading"
                android:background="@color/material_blue_grey_800"
                android:textColor="#ffffff"
                android:textSize="17sp"
                android:textStyle="bold"
                android:id="@+id/teach_mici_mac_gabhann_textview"
                android:gravity="center"
                android:layout_below="@+id/imgVteach_mici_mac_gabhann"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/teach_mici_mac_gabhann_text"
                android:id="@+id/teach_mici_mac_gabhann_textview2"
                android:layout_below="@+id/teach_mici_mac_gabhann_textview"
                android:layout_centerHorizontal="true"
                android:textSize="@dimen/text_size"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/teach_mici_mac_gabhann_text_ga"
                android:id="@+id/teach_mici_mac_gabhann_textview3"
                android:layout_below="@+id/teach_mici_mac_gabhann_textview2"
                android:layout_centerHorizontal="true"
                android:textSize="@dimen/text_size"/>
        </RelativeLayout>

    </ScrollView>
</RelativeLayout>
